JS






document.addEventListener('DOMContentLoaded', function() {
    const services = {
        californien: {
            title: 'MASSAGE CALIFORNIEN',
            content: `Le massage californien est bien plus qu'un simple soin corporel, c'est une invitation à la détente et à la reconnexion avec soi-même...`,
            duration: 'Durée : 1h (90€) / 1h30 (120€)'
        },
        suedois: {
            title: 'MASSAGE SUÉDOIS',
            content: `Le massage suédois est l'allié parfait pour celles qui recherchent un équilibre entre détente et revitalisation...`,
            duration: 'Durée : 1h (90€) / 1h30 (120€)'
        },
        'lomi-lomi': {
            title: 'MASSAGE LOMI-LOMI',
            content: `Le massage Lomi-Lomi est une véritable évasion vers les îles hawaïennes...`,
            duration: 'Durée : 1h (95€)'
        },
        detox: {
            title: 'SOIN DÉTOX JAPONAIS',
            content: `Le soin détox japonais est une véritable cérémonie de purification...`,
            duration: 'Durée : 45mn (75€)'
        }
    };

    // Sélection des éléments de la modale
    const modal = document.getElementById('modal');
    const modalTitle = document.getElementById('modal-title');
    const modalContent = document.getElementById('modal-content');
    const modalDuration = document.getElementById('modal-duration');
    const closeBtn = document.querySelector('.close');

    // Gestion des modales
    document.querySelectorAll('.read-more').forEach(button => {
        button.addEventListener('click', function() {
            const serviceType = this.closest('.service').getAttribute('data-service');
            const serviceInfo = services[serviceType];
            
            // Mettre à jour les informations de la modale
            modalTitle.textContent = serviceInfo.title;
            modalContent.innerHTML = serviceInfo.content;
            modalDuration.textContent = serviceInfo.duration;

            // Afficher la modale
            modal.style.display = 'block';
        });
    });

    // Fermer la modale
    closeBtn.addEventListener('click', function() {
        modal.style.display = 'none';
    });

    // Fermer en cliquant en dehors
    window.addEventListener('click', function(event) {
        if (event.target === modal) {
            modal.style.display = 'none';
        }
    });
});
